{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@root/*": ["/src/*"],
      "@src/*": ["/src/*"],
    },
    "noImplicitAny": true,
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "npm",
  ]
}